{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mind-elixir-shell",
  "version": "0.1.0",
  "identifier": "com.mind-elixir-shell.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mind Elixir Shell",
        "width": 1800,
        "height": 1080
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["mind-elixir-logo.png"]
  }
}
